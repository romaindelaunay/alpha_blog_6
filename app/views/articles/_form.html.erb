

<div class="container bg-info shadow text-justify-row col-8 pt-4 pb-4 rounded mb-4">
  <%= render 'shared/errors' %>
  <%= form_with(model: @article, local: true) do |f| %>
    <div class="form-group row mt-4">
      <%= f.label :title, class: "col-2 col-form-label text-light" %><br/>
      <div class="col-10">
      <%= f.text_field :title, class:"form-control shadow", placeholder: "Title of article" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
      <div class="col-10">
      <%= f.text_area :description, rows: 10, class:"form-control shadow", placeholder: "Description of article"  %>
      </div>
    </div>

    <div class="form-group text-center">
        <%= f.submit class:"btn btn-outline-light btn-lg"%>
        <%=link_to 'Cancel and return to articles listing', articles_path, class: "btn btn-outline-danger btn-lg" %>
    </div>
  <% end %> 
</div>

